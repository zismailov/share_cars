<h5>
  <%= "Send a message to #{@trip.name}" %>
</h5>

<% @message ||= Message.new %>

<%= simple_form_for [@trip, @message], remote: true do |f| %>
  <%= f.input :sender_name %>
  <%= f.input :sender_email %>
  <%= f.input :sender_phone %>
  <%= f.input :body, as: :text %>
  <%= f.submit 'Send', class: 'btn btn-warning btn-lg'  %>
<% end %>
