<div class="nested-fields form-inputs row">
  <%= f.input :city, as: :string, wrapper: :horizontal_form, wrapper_html: { class: 'col-sm-9' }, input_html: { class: 'geoname' }, placeholder: 'City', label: "Step #{f.object.rank}", required: false %>
  <%= f.input :price, as: :string, wrapper: :horizontal_form, wrapper_html: { class: 'col-sm-3' }, placeholder: 'Price', label: false %>
  <%= f.input :lon, as: :hidden %>
  <%= f.input :lat, as: :hidden %>
  <%= f.input :kind, as: :hidden, value: 'Step' %>
  <%= f.input :rank, as: :hidden %>
  <%= link_to_remove_association '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'.html_safe, f, class: 'btn btn-default' %>
</div>
