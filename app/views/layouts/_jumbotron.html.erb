<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <h2>Find your carpool</h2>
        <p>Free, community and free ridesharing.</p>
        <%= simple_form_for @trip_search, method: :get, html: { class: 'form-inline' } do |f| %>
          <div class="form-group">
            <label class="sr-only" for="from">From</label>
            <input class="form-control input-lg" id="exampleInputEmail3" placeholder="From" type="email">/</input>
          </div>
          <div class="form-group">
            <label class="sr-only" for="to">To</label>
            <input class="form-control input-lg" id="exampleInputPassword3" placeholder="To" type="password">/</input>
          </div>
          <%= f.input :leave_at, as: :string, input_html: { class: 'datepicker input-lg' }, label: false %>
          <button class="btn btn-default btn-primary btn-lg" type="submit">Search</button>
        <% end %>
      </div>
      <div class="col-md-3">
        <div class="publish">
          You have a car?
          <br/>
          <br/>
          <%= link_to 'Post add', new_trip_path, class: 'btn btn-lg btn-warning' %>
        </div>
      </div>
    </div>
  </div>
</div>
