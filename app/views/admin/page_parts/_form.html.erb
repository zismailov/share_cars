<% url = @page_part.new_record? ? admin_page_parts_path : admin_page_part_path(@page_part) %>
<% method = @page_part.new_record? ? :post : :put %>
  <div class="row">
    <div class="col-md-5 col-md-offset-3 well">
      <%= simple_form_for @page_part, as: :page_part, url: url, method: method do |f| %>
        <%= f.input :id %>
        <%= f.input :name %>
        <%= f.input :title %>
        <%= f.input :body %>
          <div class="pull-right">
            <%= link_to 'Cancel', admin_page_parts_path, class: 'btn btn-default' %>
            <%= f.button :submit, class: 'btn-primary'  %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
