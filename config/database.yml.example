default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>

development:
  <<: *default
  database: share_cars_development

test:
  <<: *default
  database: share_cars_test

production:
  <<: *default
  database: share_cars_production
  username: root
  password: <%= ENV['PHOTOALBUM_DATABASE_PASSWORD'] %>
